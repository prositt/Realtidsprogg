	@Override
	public void run() {


		while(true){
			loopTime += 10;
			long delta = loopTime - System.currentTimeMillis();
			if (delta > 0){	
				try {
					sleep(delta);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
				data.updateTime();
			}

		}



	}
}
