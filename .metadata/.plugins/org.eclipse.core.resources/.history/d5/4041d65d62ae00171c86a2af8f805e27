package todo;


import se.lth.cs.realtime.*;
import done.AbstractWashingMachine;


public class TemperatureController extends PeriodicThread {
	private AbstractWashingMachine mach;
	private int mode;
	private double temp;
	//boolean isHeating;

	public TemperatureController(AbstractWashingMachine mach, double speed) {
		super((long) (1000/speed)); // TODO: replace with suitable period
		mode = TemperatureEvent.TEMP_IDLE;
		temp = 0;
		this.mach = mach;
		//isHeating = false;
	}

	public void perform() {
		// TODO: implement this method
		TemperatureEvent e = (TemperatureEvent) mailbox.tryFetch();
		if (e!=null){
			mode = e.getMode();
			temp= e.getTemperature();
			System.out.println("Temperature mode changed to: " + mode);
		}

		switch(mode){
		
		case TemperatureEvent.TEMP_IDLE:
			mach.setHeating(false);
			break;
			
		case TemperatureEvent.TEMP_SET:					//FIX OVER AND
			if(mach.getTemperature() > temp){			//UNDER HEATING
				mach.setHeating(false);
			} else if(mach.getWaterLevel()<=temp-2)
				mach.setHeating(true);
			if(mach.getTemperature()>=temp-2){	
				((RTThread)e.getSource()).putEvent(new AckEvent(this));
			}
			break;
		}

	}
}
